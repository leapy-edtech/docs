{
  "openapi": "3.0.0",
  "info": {
    "title": "Leapy APIs",
    "version": "1.0.0",
    "description": "APIs do ecossistema Leapy"
  },
  "servers": [
    {
      "url": "https://backoffice.leapy.com",
      "description": "Backoffice API"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Verifica status da API",
        "responses": {
          "200": {
            "description": "API funcionando",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
